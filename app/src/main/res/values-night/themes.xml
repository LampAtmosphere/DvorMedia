<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DvorMedia" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#CA00FF</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_secondary_variant</item>
        <item name="colorOnSecondary">#00FF0B</item>
        <!-- Surface and background colors -->
        <item name="colorSurface">#FFD000</item>
        <item name="colorOnBackground">#EA3800</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">#C4530568</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/darkbww</item>
        <item name="headerBackground">@color/header_background_dark</item>
        <item name="drawer_back">@color/drawer_background_dark</item>
        <item name="nav_back">@color/nav_back_dark</item>
        <item name="button_back">@color/button_back_dark</item>
    </style>

    <style name="Theme.DvorMedia" parent="Base.Theme.DvorMedia">
        <!-- Custom attributes for dark theme -->
        <item name="colorAccent">@color/dark_transparent_orange</item>
        <item name="colorError">@color/dark_transparent_red</item>
        <item name="colorTertiary">@color/dark_transparent_purple</item>
        <item name="headerBackground">@color/header_background_dark</item>
    </style>
</resources>